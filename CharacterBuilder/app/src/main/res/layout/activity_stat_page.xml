                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="/X"
                        android:id="@+id/HPTotal"
                        android:textSize="25dp" />

