<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jabaden.dicerollermrkii" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DiceRollerMenu"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".customDiceActivity"
            android:label="@string/title_activity_custom_dice"
            android:parentActivityName=".DiceRollerMenu"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jabaden.dicerollermrkii.DiceRollerMenu" />
        </activity>
        <activity
            android:name=".dropLowestDice"
            android:label="@string/title_activity_drop_lowest_dice"
            android:parentActivityName=".DiceRollerMenu"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jabaden.dicerollermrkii.DiceRollerMenu" />
        </activity>
        <activity
            android:name=".dropLowestDiceMRKII"
            android:label="@string/title_activity_drop_lowest_dice_mrkii"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".rerollOnes"
            android:label="@string/title_activity_reroll_ones"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
